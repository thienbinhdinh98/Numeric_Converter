{
    "manifest_version" : 2,
    "name" : "Numeric Converter",
    "version": "0.1.0",
    "author": "Thien Binh Dinh",
    "permissions": [
        "contextMenus",
        "tabs"
      ],
    "browser_action": {
        "default_popup": "src/popup.html",
        "default_title": "Numeric Converter Beta",
        "default_icon": "img/icon.png"
    },
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["src/content_script.js"]
        }
    ],
    "background": {
        "scripts": ["src/background_script.js"],
        "persistent": false
    }
}